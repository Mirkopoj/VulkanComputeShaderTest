CFLAGS = -std=c++17 -O2 
LDFLAGS = -lglfw -lvulkan -ldl -lpthread -lX11 -lXxf86vm -lXrandr -lXi
CFLAGS += $(shell pkg-config --cflags opencv4)
LDFLAGS += $(shell pkgconf --libs opencv4)

OpenCVTest: main.cpp
	g++ $(CFLAGS) -o OpenCVTest main.cpp $(LDFLAGS)

.PHONY: test clean

test: OpenCVTest
	./OpenCVTest

clean:
	rm -f OpenCVTest
